<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="SpaceBar" xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<bannerLeft>
		<src>images/spacebar.png</src>
		<href>index.html</href>
	</bannerLeft>

	<publishDate position="bottom" format="yyyy-MM-dd" />
	<version position="bottom" />

	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.1.0</version>
	</skin>
	
	<custom>
		<reflowSkin>
			<protocolRelativeURLs>true</protocolRelativeURLs>
			<smoothScroll>true</smoothScroll>
			<theme>bootswatch-spacelab</theme>
			<highlightJs>true</highlightJs>
			<highlightJsTheme>github</highlightJsTheme>
			<absoluteResourceURL>${project.url}</absoluteResourceURL>
			<brand>
				<name>SpaceBar</name>
				<href>index.html</href>
			</brand>
			<slogan>A WYSIWYG Editor for TIBCO ActiveSpaces®</slogan>
			<topNav></topNav>
			<bottomNav maxSpan="9">
				<column>Main</column>
				<column>Documentation</column>
				<column>ActiveSpaces</column>
			</bottomNav>
			<!-- <bottomDescription quote="false"> -->
			<!-- <![CDATA[ -->
			<!-- <a href="http://www.tibco.com/" style="border:0; display:block"><img 
				src="/images/tibco-logo-retina.png" width="150" /></a> -->
			<!-- ]]> -->
			<!-- </bottomDescription> -->
			<pages>
				<index>
					<titleTemplate>SpaceBar</titleTemplate>
					<toc>false</toc>
					<markPageHeader>false</markPageHeader>
					<sections>
						<carousel />
						<columns>2</columns>
						<body />
						<sidebar />
					</sections>
				</index>
				<faq>
					<titleTemplate>SpaceBar - FAQ</titleTemplate>
				</faq>
			</pages>
		</reflowSkin>
	</custom>

	<body>
		<head>
			<link rel="icon" type="image/png" href="images/icon.png" />
		</head>
		
		<links>
			<item name="Download" href="download.html" />
			<item name="Get Started" href="getstarted.html" />
			<item name="FAQ" href="faq.html" />
		</links>
		
		<menu name="Main" inherit="top">
			<item name="Home" href="index.html" />
			<item name="Download" href="download.html" />
		</menu>
		<menu name="Documentation" inherit="bottom">
			<item name="Get Started" href="getstarted.html" />
			<item name="FAQ" href="faq.html" />
		</menu>
		<menu name="ActiveSpaces" inherit="bottom">
			<item name="Tools" href="/tools" />
		</menu>
	</body>

</project>